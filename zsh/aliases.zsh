alias dirsize='du -d 1 -h'
alias stopav='sudo defaults write /Library/Preferences/com.mcafee.ssm.antimalware.plist OAS_Enable -bool False && sudo /usr/local/McAfee/AntiMalware/VSControl stopoas'
